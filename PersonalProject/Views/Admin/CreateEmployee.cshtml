@model PersonalProject.Models.Employee
@{
    ViewData["Title"] = "Create Employee";
}

<h4>Create Nurse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmployee">
            <div class="form-group">
                <label name="FirstName" class="control-label">First Name</label>
                <input name="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label name="LastName" class="control-label">Last Name</label>
                <input name="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label name="Email" class="control-label">Email</label>
                <input name="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label name="password" class="control-label">Password</label>
                <input type="password" name="password" class="form-control" />
            </div>
            <div class="form-group">
                <label name="EmployerID" class="control-label">Assigned Employer</label>
                <select asp-for="EmployerID" class="form-control" asp-items="@(new SelectList(Model.EmployerList, "Value", "Text"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Employee" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <form asp-action="Index">
        <div class="form-group">
            <input type="submit" value="Back to Home" class="btn btn-primary" />
        </div>
    </form>
</div>