@model PersonalProject.Models.Employee

@{

}

<h2>Assign Employee Schedule</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAssignSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label">Employee Assigned</label>
                <select asp-for="EmployeeID" class="form-control" asp-items="@(new SelectList(Model.EmployeeList, "Value", "Text"))"></select>
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleID" class="control-label">Scheduled Shift</label>
                <select asp-for="ScheduleID" class="form-control" asp-items="@(new SelectList(Model.ScheduleList, "Value", "Text"))"></select>
                <span asp-validation-for="ScheduleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <form asp-action="Index">
        <div class="form-group">
            <input type="submit" value="Back to Home" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
